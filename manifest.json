{
  "manifest_version": 2,

  "name": "idealo Sidebar Extension",
  "description": "An idealo addon for the Opera sidebar",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs"],
  "sidebar_action": {
    "default_icon": "icon.png",
    "default_title": "idealo",
    "default_panel": "panel.html"
  }
}