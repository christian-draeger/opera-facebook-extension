{
  "manifest_version": 2,

  "name": "Facebook Sidebar Extension",
  "description": "A Facebook addon for the Opera sidebar",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Facebook"
  }
}